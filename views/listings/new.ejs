<% layout('layouts/boilerplate') -%>

    <div class="row">
        <div class="col-6 offset-3">
            <br><br>
            <h1>Create new lsiting</h1>
            <form action="/listings" method="POST" class="needs-validation" novalidate>
                <div>
                    <label class="form-label" for="title">Title</label>
                    <input type="text" placeholder="Add a catchy title" class="form-control" name="listing[title]"
                        required>
                    <div class="valid-feedback">
                        Title looks good
                    </div>
                </div><br>
                <div>
                    <label class="form-label" for="description">Description</label><br>
                    <textarea name="listing[description]" class="form-control" required></textarea>
                    <div class="invalid-feedback">
                        Please enter the description.
                    </div>
                </div>
                <div>
                    <label class="form-label" for="image">Image Link</label>
                    <input type="text" placeholder="Enter the image URL/link" class="form-control"
                        name="listing[image]">
                </div><br>
                <div class="row">
                    <div class="col-md-4">
                        <label class="form-label" for="price">Price</label>
                        <input placeholder="1200" class="form-control" name="listing[price]" required>
                        <div class="invalid-feedback">
                            Please choose a valid price.
                        </div>
                    </div><br>
                    <div class="col-md-8">
                        <label class="form-label" for="country">Country</label>
                        <input type="text" placeholder="India" class="form-control" name="listing[country]" required>
                        <div class="invalid-feedback">
                            Please Enter the Country Name.
                        </div>
                    </div>
                </div><br>
                <div>
                    <label class="form-label" for="location">Location</label>
                    <input type="text" placeholder="Rajgir/Bihar" class="form-control" name="listing[location]"
                        required>
                    <div class="invalid-feedback">
                        Please enter your location
                    </div>
                </div><br>
                <button class="add-btn btn btn-primary">Add</button><br>
            </form><br />
        </div>
    </div>